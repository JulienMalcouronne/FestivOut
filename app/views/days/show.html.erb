<div class="container-fluid content-wrapper chatroom pt-5">
  <div class="chat">
    <h2 class="text-center"><%=@day.name%></h2>
    <div data-controller="reminder">
    <% @day.artists.each do |artist| %>
      <li style="list-style: none;">
        <div class="card-product">
          <img src="<%= cl_image_path artist.image.key , height: 10 %>">
          <div class="card-product-infos">
            <h2><%= artist.name %></h2>
            <strong><h6><%= artist.start_time.strftime("at %I:%M%p") %></h6></strong>
            <%= submit_tag 'Add a reminder', class: 'btn btn-primary', data: {action: "click->reminder#activate"} %>
          </div>
        </div>
      </li>
    <% end %>
    </div>
  </div>
</div>
