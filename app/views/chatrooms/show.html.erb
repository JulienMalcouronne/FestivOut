<div class="chatroom container-fluid pt-2 pb-1">
    <h1 class="text-center"><%= @chatroom.name.capitalize %> chatroom</h1>
    <div class="messages chat" data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>

  <div class="mt-2">
    <div class="mb-0">
      <%= simple_form_for [@festival, @chatroom, @message], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
          <% f.submit %>
      <% end %>
    </div>
  </div>
</div>
