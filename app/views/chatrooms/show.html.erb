<div class="chatroom">
  <h1><%= @chatroom.name.capitalize %> chatroom</h1>
  <div class="chat">

    <div class="messages content-wrapper " data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>
  </div>

  <div class="mt-2">
    <%= simple_form_for [@festival, @chatroom, @message], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
          <% f.submit %>
    <% end %>
  </div>
</div>
